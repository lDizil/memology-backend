                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "memes"
                ],
                "summary": "Generate new meme",
                "parameters": [
                    {
                        "description": "Meme generation request",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/services.CreateMemeRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/models.Meme"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
